{
  "languages": {
    "Go": {
      "language_servers": ["gopls"],
      "format_on_save": {
        "external": {
          "command": "gofumpt",
          "arguments": []
        }
      },
      "tab_size": 4,
      "hard_tabs": true
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "analyses": {
          "unusedparams": true,
          "shadow": true
        },
        "staticcheck": true,
        "gofumpt": true
      }
    }
  }
}
